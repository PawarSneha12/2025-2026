7. Reverse Integer

ans.-

class Solution {
    public int reverse(int x) {
        int num=x;
        x=Math.abs(x);
        int y=0,n=0;
        while(x!=0){
         y=x%10;
         if (n>(Integer.MAX_VALUE-y)/10) { return 0;}
        n=n*10+y;
         x=x/10;
        }
        return (num<0)?(-n):n ;
    }
}
